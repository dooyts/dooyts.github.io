{
  "compilerOptions": {
    "target": "ES2020",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Can often work with tsc emit if outDir is used. Consider "node" or "nodenext" if issues.
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true, // Good to have for importing JSON files
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Changed: Allow emitting JS files
    "outDir": "./dist", // Added: Specify output directory
    "sourceMap": true, // Added: Generate source maps for debugging
    "allowJs": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true, // Keeping this, good practice

    "paths": {
      "@/*" :  ["./*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"], // Ensure this correctly points to your source files
  "exclude": ["node_modules", "dist"] // Exclude the output directory
}
